<Window x:Class="DMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DMS"
        xmlns:ViewModel="clr-namespace:DMS.MVVM.ViewModel"
        mc:Ignorable="d"
        Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        xmlns:Controls="clr-namespace:DMS.Controls">

    <Window.DataContext>
        <ViewModel:MainViewModel />
    </Window.DataContext>

    <Border Background="GhostWhite" CornerRadius="10">
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--
                Bar at the top 
                Used for moving, closing, maximizing the window etc.
            -->
            <Border Height="20"
                    Grid.ColumnSpan="2"
                    CornerRadius="10,10,0,0"
                    VerticalAlignment="Top"
                    Width="920"
                    Background="DarkGray"
                    MouseMove="Border_MouseMove">

                <DockPanel>
                    <TextBlock Margin="10,0,0,0" Padding="0" VerticalAlignment="Center" FontFamily="/Fonts/#Poppins">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=Database.HasConnection}" Value="True">
                                        <Setter Property="Text" Value="Connected"/>
                                        <Setter Property="Foreground" Value="Green"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Path=Database.HasConnection}" Value="False">
                                        <Setter Property="Text" Value="Disconnected"/>
                                        <Setter Property="Foreground" Value="Red"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <Button x:Name="CloseButton"
                        HorizontalAlignment="Right"
                        Height="20"
                        Width="20"
                        BorderThickness="0"                        
                        Margin="0,0,5,0"
                        Command="{Binding CloseCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/Images/close1.png"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Button.Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="DarkGray" Direction="30"
                                                              ShadowDepth="2" BlurRadius="15"
                                                              Opacity="0.7"/>
                                    </Setter.Value>
                                </Setter>
                                <!--<Setter Property="Cursor" Value="Hand"/>-->

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <ImageBrush ImageSource="/Images/close.png"
                                                            Stretch="UniformToFill"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="13" Height="13"
                                    Background="{TemplateBinding Background}">
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </DockPanel>
            </Border>

            <StackPanel Orientation="Horizontal"
                        Grid.Column="0"
                        Grid.Row="0"
                        Margin="0,20,0,0">

                <Button x:Name="GitHub_button"
                        Height="50" Width="50"
                        BorderThickness="0"
                        Margin="15,0,0,0"
                        Command="{Binding OpenLinkCommand}">

                    <Button.Style>
                        <Style TargetType="Button">

                            <Setter Property="Background">
                                <Setter.Value>
                                    <ImageBrush ImageSource="/Images/GitHub-Mark-64px.png"/>
                                </Setter.Value>
                            </Setter>

                            <Setter Property="Cursor" Value="Hand"/>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <ImageBrush ImageSource="/Images/817664_github_512x512.png"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>

                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="50" Height="50"
                                    Background="{TemplateBinding Background}">

                                <ContentPresenter VerticalAlignment="Center"
                                                 HorizontalAlignment="Center">
                                </ContentPresenter>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>

                <TextBlock Text="GitHub Profis"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Foreground="Black"
                           FontSize="26"
                           Margin="5"
                           FontWeight="Bold"
                           FontFamily="/Fonts/#Collegiate">
                </TextBlock>

            </StackPanel>


            <StackPanel Grid.Row="1"
                        Margin="0,10,0,0">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border Padding="10"
                            Grid.Row="0" 
                            Background="DarkGray">
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>

                            <CheckBox x:Name="cbToggleMenu" Grid.Column="0">
                                <CheckBox.Template>
                                    <ControlTemplate TargetType="CheckBox">
                                        <Grid Background="Transparent">
                                            <Viewbox Width="25" Height="25">
                                                <Path
                                                    Data="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"
                                                    Fill="GhostWhite"
                                                    Stretch="Fill" />
                                            </Viewbox>
                                        </Grid>
                                    </ControlTemplate>
                                </CheckBox.Template>
                            </CheckBox>
                            <TextBlock Text="{Binding Path=CurrentView}" 
                                       Grid.Column="1" 
                                       Foreground="GhostWhite"
                                       VerticalAlignment="Center"
                                       Margin="40 0"
                                       FontSize="16"/>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <Controls:HamburgerMenu Height="250"
                                                Grid.Column="0"
                                                Background="#f2f2f2"
                                                BorderBrush="#dbdbdb"
                                                BorderThickness="0 0 1 0" 
                                                FallbackOpenWidth="300"
                                                IsOpen="{Binding IsChecked, ElementName=cbToggleMenu}"
                                                OpenCloseDuration="0:0:0.25">
                            <Controls:HamburgerMenu.Content>
                                <StackPanel Margin="0 10" Width="250" x:Name="MenuContent">
                                    <Controls:HamburgerMenuItem Command="{Binding DiscoveryViewCommand}">
                                        <TextBlock Text="Scan files"/>
                                    </Controls:HamburgerMenuItem>
                                    <Controls:HamburgerMenuItem Command="{Binding HomeViewCommand}">
                                        <TextBlock Text="Search Results" />
                                    </Controls:HamburgerMenuItem>
                                    <!--<Controls:HamburgerMenuItem>
                                        <TextBlock Text="Developer Guides" />
                                    </Controls:HamburgerMenuItem>
                                    <Controls:HamburgerMenuItem>
                                        <TextBlock Text="Tutorials" />
                                    </Controls:HamburgerMenuItem>
                                    <Controls:HamburgerMenuItem>
                                        <TextBlock Text="Reference" />
                                    </Controls:HamburgerMenuItem>-->
                                </StackPanel>
                            </Controls:HamburgerMenu.Content>
                        </Controls:HamburgerMenu>

                    </Grid>
                </Grid>

            </StackPanel>

            <StackPanel Grid.Row="0"
                        Grid.Column="1"
                        Orientation="Horizontal"
                        Margin="0,20,0,0">
                <!--
                x:Name muss "SearchBox" sein, damit der Style des TextBlocks greift
                -->
                <StackPanel VerticalAlignment="Center">
                    <TextBox Width="280"
                             Height="40"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             Margin="5" Padding="0"
                             Grid.Column="1"
                             Background="DarkGray"
                             x:Name="SearchBox"
                             Style="{StaticResource ModernTextbox}"
                             VerticalContentAlignment="Center"
                             Foreground="White"
                             FontSize="16"
                             Text="{Binding Path=SearchText}"/>
                    <TextBlock Margin="10,-50,0,0"
                               Style="{StaticResource PlaceholderStyle}"/>
                </StackPanel>

                <!--this Button we may use as alternative to the search icon if lately-->
                <!--to decide to implement some logic to clear the Searbox from entries-->
                <!--<Button Width="35"
                        Height="35">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="35" Height="35"
                                    CornerRadius="4"
                                    Background="{TemplateBinding Background}">

                                <ContentPresenter VerticalAlignment="Center"
                                                 HorizontalAlignment="Center">
                                </ContentPresenter>

                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>-->

                <!--Nice rounded button-->
                <Button Width="80"
                        Height="40"
                        Foreground="WhiteSmoke"
                        FontFamily="Arial"
                        FontSize="20"
                        Content="Go"
                        Command="{Binding Path=SearchCommand}">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily"
                                    Value="Arial"/>
                            <Setter Property="Background" Value="#FF0C0E0E"/>

                            <Setter Property="Button.Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="DarkGray" Direction="30"
                                                              ShadowDepth="3" BlurRadius="20"
                                                              Opacity="0.7"/>
                                </Setter.Value>
                            </Setter>

                            <!--<Setter Property="Cursor" Value="None"/>-->
                            <Style.Triggers>

                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF454545"/>
                                </Trigger>

                                <Trigger Property="IsMouseOver" Value="False">
                                    <Setter Property="BorderBrush" Value="DarkGray"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>

                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="80" Height="35"
                                    CornerRadius="4"
                                    Background="{TemplateBinding Background}">

                                <ContentPresenter VerticalAlignment="Center"
                                                 HorizontalAlignment="Center">
                                </ContentPresenter>

                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>

            </StackPanel>

            <ContentControl Grid.Row="1"
                            Grid.Column="1"
                            Margin="10"
                            Content="{Binding CurrentView}"/>

        </Grid>
    </Border>
</Window>
