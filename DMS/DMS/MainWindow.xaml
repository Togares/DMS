<Window x:Class="DMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Interactions="http://schemas.microsoft.com/expression/2010/interactions"
        xmlns:Interactivity="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:DMS"
        xmlns:ViewModel="clr-namespace:DMS.MVVM.ViewModel"
        mc:Ignorable="d"
        Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <ViewModel:MainViewModel/>
    </Window.DataContext>

    <Border Background="GhostWhite" CornerRadius="10">
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <!--
                Bar at the top 
                Used for moving, closing, maximizing the window etc.
            -->
            <Border Height="20"
                    Grid.ColumnSpan="2"
                    CornerRadius="10,10,0,0"
                    VerticalAlignment="Top"
                    Width="920"
                    Background="DarkGray"
                    MouseMove="Border_MouseMove">
                
                <Button x:Name="CloseButton"
                        HorizontalAlignment="Right"
                        Height="20"
                        Width="20"
                        BorderThickness="0"                        
                        Margin="0,0,5,0"
                        Command="{Binding CloseCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <ImageBrush ImageSource="/Images/close1.png"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Button.Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="DarkGray" Direction="30"
                                                              ShadowDepth="2" BlurRadius="15"
                                                              Opacity="0.7"/>
                                </Setter.Value>
                            </Setter>
                            <!--<Setter Property="Cursor" Value="Hand"/>-->

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <ImageBrush ImageSource="/Images/close.png"
                                                            Stretch="UniformToFill"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="13" Height="13"
                                    Background="{TemplateBinding Background}">
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>

            <StackPanel Orientation="Horizontal"
                        Grid.Column="0"
                        Grid.Row="0"
                        Margin="0,20,0,0">

                <Button x:Name="GitHub_button"
                        Height="50" Width="50"
                        BorderThickness="0"
                        Margin="15,0,0,0"
                        Command="{Binding OpenLinkCommand}">

                    <Button.Style>
                        <Style TargetType="Button">

                            <Setter Property="Background">
                                <Setter.Value>
                                    <ImageBrush ImageSource="/Images/GitHub-Mark-64px.png"/>
                                </Setter.Value>
                            </Setter>

                            <Setter Property="Cursor" Value="Hand"/>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <ImageBrush ImageSource="/Images/817664_github_512x512.png"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>

                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="50" Height="50"
                                    Background="{TemplateBinding Background}">

                                <ContentPresenter VerticalAlignment="Center"
                                                 HorizontalAlignment="Center">
                                </ContentPresenter>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>

                <TextBlock Text="GitHub Profis"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Foreground="Black"
                           FontSize="26"
                           Margin="5"
                           FontWeight="Bold"
                           FontFamily="/Fonts/#Collegiate">
                </TextBlock>

            </StackPanel>


            <StackPanel Grid.Row="1"
                        Margin="0,10,0,0">

                <RadioButton Content="Scan files"
                             IsChecked="True"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding DiscoveryViewCommand}"/>

                <RadioButton Content="Search results"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding HomeViewCommand}">
                </RadioButton>
                
                <!--<RadioButton Content="Featured"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"/>-->
            </StackPanel>

            <StackPanel Grid.Row="0"
                        Grid.Column="1"
                        Orientation="Horizontal"
                        Margin="0,20,0,0">

                <TextBox Width="280"
                         Height="40"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Left"
                         Margin="5"
                         Grid.Column="1"                         
                         Text="{Binding Path=SearchText}"
                         Style="{StaticResource ModernTextbox}">
                    <Interactivity:Interaction.Triggers>
                        <Interactivity:EventTrigger EventName="TextChanged">
                            <Interactivity:InvokeCommandAction Command="{Binding SearchCommand}"/>
                        </Interactivity:EventTrigger>
                    </Interactivity:Interaction.Triggers>
                </TextBox>

                <!--this Button we may use as alternative to the search icon if lately-->
                <!--to decide to implement some logic to clear the Searbox from entries-->
                <!--<Button Width="35"
                        Height="35">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="35" Height="35"
                                    CornerRadius="4"
                                    Background="{TemplateBinding Background}">

                                <ContentPresenter VerticalAlignment="Center"
                                                 HorizontalAlignment="Center">
                                </ContentPresenter>

                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>-->

                <!--Nice rounded button-->
                <Button Width="80"
                        Height="40"
                        Foreground="WhiteSmoke"
                        FontFamily="Arial"
                        FontSize="20"
                        Content="Go">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily"
                                    Value="Arial"/>
                            <Setter Property="Background" Value="#FF0C0E0E"/>

                            <Setter Property="Button.Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="DarkGray" Direction="30"
                                                              ShadowDepth="3" BlurRadius="20"
                                                              Opacity="0.7"/>
                                </Setter.Value>
                            </Setter>

                            <!--<Setter Property="Cursor" Value="None"/>-->
                            <Style.Triggers>

                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF454545"/>
                                </Trigger>

                                <Trigger Property="IsMouseOver" Value="False">
                                    <Setter Property="BorderBrush" Value="DarkGray"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>

                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="80" Height="35"
                                    CornerRadius="4"
                                    Background="{TemplateBinding Background}">

                                <ContentPresenter VerticalAlignment="Center"
                                                 HorizontalAlignment="Center">
                                </ContentPresenter>

                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>
              
            </StackPanel>

            <ContentControl Grid.Row="1"
                            Grid.Column="1"
                            Margin="10"
                            Content="{Binding CurrentView}"/>

        </Grid>
    </Border>
</Window>
