<Window x:Class="DMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DMS"
        xmlns:ViewModel="clr-namespace:DMS.MVVM.ViewModel"
        mc:Ignorable="d"
        Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        MouseMove="Window_MouseMove">

    <Window.DataContext>
        <ViewModel:MainViewModel/>
    </Window.DataContext>


    <Border Background="GhostWhite" CornerRadius="10">


        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal"
                        Grid.Column="0"
                        Grid.Row="0">

                <Button x:Name="GitHub_button"
                        Height="50" Width="50"
                        BorderThickness="0"
                        Margin="15,0,0,0">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <ImageBrush ImageSource="/Images/GitHub-Mark-64px.png"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Cursor" Value="Hand"/>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <ImageBrush ImageSource="/Images/logo_github_icon_143196.png"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="50" Height="50"
                                    Background="{TemplateBinding Background}">

                                <ContentPresenter VerticalAlignment="Center"
                                                 HorizontalAlignment="Center">
                                </ContentPresenter>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>

                <TextBlock Text="GitHub Profis"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Foreground="Black"
                           FontSize="26"
                           Margin="5"
                           FontWeight="Bold"
                           FontFamily="/Fonts/#Collegiate">
                    
                    <!--if we want image instead of picture-->
                    <!--<InlineUIContainer>
                        <Image Source="/Images/GitHub-Logo.png"
                               Height="23"
                               Width="90"/>
                    </InlineUIContainer>-->

                </TextBlock>

            </StackPanel>


            <StackPanel Grid.Row="1">

                <RadioButton Content="Home"
                             Height="50"
                             Foreground="Black"
                             FontSize="14"
                             IsChecked="True"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding HomeViewCommand}"/>

                <RadioButton Content="Discovery"
                             Height="50"
                             Foreground="Black"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding DiscoveryViewCommand}"/>

                <!--<RadioButton Content="Featured"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"/>-->

            </StackPanel>

            <StackPanel Grid.Row="0"
                        Grid.Column="1"
                        Orientation="Horizontal">

                <TextBox Width="280"
                         Height="40"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Left"
                         Margin="5"
                         Grid.Column="1"
                         Style="{StaticResource ModernTextbox}"/>

                <!--Nice rounded button-->
                <Button Width="80"
                        Height="40"
                        Foreground="WhiteSmoke"
                        FontFamily="Arial"
                        FontSize="20"
                        Content="Go">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily"
                                    Value="Arial"/>
                            <Setter Property="Background" Value="#FF0C0E0E"/>
                            <Setter Property="Button.Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="DarkGray" Direction="30"
                                                              ShadowDepth="3" BlurRadius="20"
                                                              Opacity="0.7"/>
                                </Setter.Value>
                            </Setter>
                            <!--<Setter Property="Cursor" Value="None"/>-->
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF454545"/>

                                </Trigger>

                                <Trigger Property="IsMouseOver" Value="False">
                                    <Setter Property="BorderBrush" Value="DarkGray"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>

                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="80" Height="35"
                                    CornerRadius="4"
                                    Background="{TemplateBinding Background}">

                                <ContentPresenter VerticalAlignment="Center"
                                                 HorizontalAlignment="Center">
                                </ContentPresenter>

                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>

                <Canvas>
                    <Button x:Name="CloseButton"
                            Height="25"
                            Width="25"
                            BorderThickness="0"
                            Canvas.Left="310"
                            Margin="5,10,10,0">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/Images/error.png"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Button.Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="DarkGray" Direction="30"
                                                              ShadowDepth="2" BlurRadius="15"
                                                              Opacity="0.7"/>
                                    </Setter.Value>
                                </Setter>
                                <!--<Setter Property="Cursor" Value="Hand"/>-->

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <ImageBrush ImageSource="/Images/cancel.png"
                                                            Stretch="UniformToFill"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="25" Height="25"
                                    Background="{TemplateBinding Background}">
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>
                </Canvas>

            </StackPanel>


            <ContentControl Grid.Row="1"
                            Grid.Column="1"
                            Margin="10"
                            Content="{Binding CurrentView}"/>

        </Grid>

    </Border>






</Window>
