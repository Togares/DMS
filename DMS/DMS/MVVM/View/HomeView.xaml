<UserControl x:Class="DMS.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DMS.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="460" d:DesignWidth="800">
    
    
    <StackPanel>
        <TextBlock Text="Search Results"
                   Foreground="Black"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,20"
                   FontFamily="/Fonts/#Poppins"/>


        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,10">
            <Border Width="700"
                    Height="380">

                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="GhostWhite" Offset="0.0"/>
                        <GradientStop Color="GhostWhite" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Border.Clip>
                    <RectangleGeometry RadiusX="0"
                                       RadiusY="0"
                                       Rect="0,0,700,380"/>
                </Border.Clip>

                <DataGrid Style="{StaticResource DataGridTheme}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name"/>
                        <DataGridTextColumn Header="Date modified"/>
                        <DataGridTextColumn Header="Typ"/>
                        <DataGridTextColumn Header="Path"/>
                    </DataGrid.Columns>
                </DataGrid>

